---
import "../styles/global.css";
import { Image } from 'astro:assets';
import logoCdp from '../assets/images/logo_cdp.svg';

interface Props {
	title: string;
	description?: string;
}

const { title, description = "Centri Estivi a Settignano - sulle colline di Firenze. Un'estate immersi nella natura." } = Astro.props;
